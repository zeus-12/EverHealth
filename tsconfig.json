{
	"compilerOptions": {
		"baseUrl": "./",
		"paths": {
			"@hooks/*": ["src/hooks/*"],
			"@screens/*": ["src/screens/*"],
			"@components/*": ["src/components/*"],
			"@lib/*": ["./src/lib/*"],
			"@/*": ["./src/*"]
		}
	},
	"extends": "expo/tsconfig.base",
	"include": [
		"./src/**/*",
		"App.tsx",
		"src/components/app/**/*",
		"src/assets",
		"app"
	]
}
